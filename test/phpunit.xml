<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap.php"
         cacheTokens="true"
         colors="true"
         debug="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         mapTestClassNameToCoveredClassName="false"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="true"
         stopOnSkipped="false"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader"
         verbose="true">
    <testsuites>
        <testsuite name="CrocoCore">
            <directory>./CrocCrocTest</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="build/reports/phpunit/coverage" charset="UTF-8"/>
        <log type="coverage-text" target="build/reports/phpunit/coverage.txt" charset="UTF-8"/>
    </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true" >
            <directory suffix=".php">src/CrocCroc</directory>
        </whitelist>
    </filter>
</phpunit>